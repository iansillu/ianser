{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Llista d'usuaris</h1>

    <table class="records_list" style="border:1px solid black;">
        <thead>
            <tr>
                <th>Username</th>
                <th>Password</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Apellido2</th>
                <th>Ciudad</th>
                <th>Email</th>
                <th>Iduser</th>
                <th> Rols </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuari in usuaris %}
            <tr style="border:1px solid black;">
                <td style="border:1px solid black;">{{ usuari.username }}</td>
                <td style="border:1px solid black;">{{ usuari.password }}</td>
                <td style="border:1px solid black;">{{ usuari.nombre }}</td>
                <td style="border:1px solid black;"{{ usuari.apellido }}</td>
                <td style="border:1px solid black;">{{ usuari.apellido2 }}</td>
                <td style="border:1px solid black;">{{ usuari.ciudad }}</td>
                <td style="border:1px solid black;">{{ usuari.email }}</td>
                
                <td style="border:1px solid black;">{{ usuari.iduser }}</td>
                <td style="border:1px solid black;">{{ usuari.roles[0] }}</td>
                <td style="border:1px solid black;">
                <ul>
                    <li>
                        <a href="{{ path('usuari_modificar', { 'id': usuari.iduser }) }}">Editar</a>
                    </li>
                    <li>
                        <a href="{{ path('usuari_eliminar', { 'id': usuari.iduser }) }}">Eliminar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('usuari_crear') }}">
                Crear un nou usuari
            </a>
        </li>
        <li>
            <a href="{{ path('admin_portada') }}">Tornar al men√∫ principal </a>
        </li>
    </ul>
    {% endblock %}
