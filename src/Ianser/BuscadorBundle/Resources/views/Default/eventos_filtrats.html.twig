                <div class="descripcion"><b>Descripcio: </b><span>{{ evento.descripcion|slice(0,60) ~ '...'}}</span></div>
                {% else %}
                <div class="descripcion"><b>Descripcio: </b><span>{{ evento.descripcion }}</span></div>
                {% endif %}
                
