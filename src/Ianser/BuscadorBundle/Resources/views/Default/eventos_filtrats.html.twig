                <div class="acciones">

                    {% if evento.asiste == 'no' %}

                    <div id="{{ evento.idevento }}1" class="asistir asistencia"><p style="display:none">{{evento.idevento}}</p><span class="actionsspan">Assistir</span><i class="fa fa-check fa-2x" aria-hidden="true"></i></div>

