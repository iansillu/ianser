<div id="nouEvento">
    <h1>CREA UN NOU ESDEVENIMENT</h1>
    {{ form_start(form) }}

    <div id="formuTotal">


		    <div id="formPart1">
		    	<div class="formNombre">
		    	{{ form_label(form.nombre) }}{{ form_widget(form.nombre) }}
		   		</div>

		   		<div class="formNombre">
		    	{{ form_label(form.imageFile) }}{{ form_widget(form.imageFile) }}
		    	</div>

		    	<div class="formNombre">
		    	{{ form_label(form.direccion) }}{{ form_widget(form.direccion) }}
		    	</div>

		    	<div class="formNombre">
		    	{{ form_label(form.ciudad) }}{{ form_widget(form.ciudad) }}
		    	</div>

		    	<div class="formNombre">
		    	{{ form_label(form.tipo) }}{{ form_widget(form.tipo) }}
		    	</div>

		    	<div class="formNombre">
		    	{{ form_label(form.aforo) }}{{ form_widget(form.aforo) }}
		    	</div>

		    </div>
		    
		    <div id="formPart2">

		    	<div class="formNombre" id="descripcioInput">
